{
  "name": "next-email-builder",
  "version": "1.0.0",
  "description": "Modern drag-and-drop email/newsletter builder with optional AI chat interface for Next.js/React",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "rimraf dist && rollup -c && tsc -p tsconfig.build.json",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "play:dev": "npm --prefix playground run dev",
    "play:build": "npm --prefix playground run build",
    "play:preview": "npm --prefix playground run preview"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "next": "^15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.48.0",
    "vitest": "^2.0.5",
    "typescript": "^5.9.2"
  },
  "files": ["dist"],
  "sideEffects": false
}
